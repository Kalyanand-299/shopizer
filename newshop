pipeline {
    triggers {
        cron ('30 17 * * *')
     }
    agent {label 'GRADLE && MVN3 && NVM && PY3'} 
    stages {
        stage('clone') { 
            steps {
                git url:'https://github.com/Kalyanand-299/shopizer.git' , branch : 'release' 
            }
        }
        stage('install') {
            steps { 

                sh 'mvn package'
            }
        }
    }
}